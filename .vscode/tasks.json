{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build all (Debug) simulator",
            "command": "/usr/bin/make",
            "args": [
                "-j",
                "8", //threads number
                "all_simulator"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "build all m328p",
            "command": "/usr/bin/make",
            "args": [
                "-j",
                "8", //threads number
                "all_m328p"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}